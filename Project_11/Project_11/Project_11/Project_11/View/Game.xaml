<Window x:Class="Project_11.View.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_11.View"
        mc:Ignorable="d"
        Loaded="Window_Loaded"

        Title="Game" Height="750" Width="1000">
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" ShadowDepth="2" BlurRadius="4" Color="Gray"/>
    </Window.Resources>


    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                <GradientStop Color="#FFC2BFF2" Offset="0"/>
                <GradientStop Color="#FF4A5D91" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="119*"/>
            <RowDefinition Height="119.007"/>
            <RowDefinition Height="119*"/>
            <RowDefinition Height="119*"/>
            <RowDefinition Height="119*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="Title" Grid.Row="1" Grid.Column="1"
              Content="New Othello Online"
              FontFamily="Arial"
              FontSize="50"
              FontWeight="Bold"
              HorizontalAlignment="Center"
              VerticalContentAlignment="Center"
              >
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFF6F6F6" Offset="1"/>
                    <GradientStop Color="#FFB2B2B2" Offset="0"/>
                </LinearGradientBrush>
            </Label.Foreground>
            <Label.Effect>
                <DropShadowEffect Color="Black"
                                  BlurRadius="10" 
                                  ShadowDepth="0"
                                  Opacity="1"
                                  />
            </Label.Effect>
        </Label>

        <Grid Grid.Row="1" Grid.Column="3" Margin="10">
            <Border
                Background="#F3F3F3"
                CornerRadius="15"
                BorderThickness="2"
                BorderBrush="#888"
                Padding="10"
                Effect="{DynamicResource DropShadowEffect}">

                <TextBox x:Name="Game_ID" 
                         Text="{Binding Game_Account.ID}" 
                         FontSize="12"
                         FontFamily="Segoe UI"
                         FontWeight="Bold"
                         Foreground="#333"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         Background="Transparent"
                         BorderThickness="0"
                         IsReadOnly="True"
                         Cursor="Arrow"/>
            </Border>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="4" Margin="10,10,10,10">
            <Border Background="#2C3E50"
                    BorderBrush="Black"
                    BorderThickness="0"
                    CornerRadius="20"
                    Padding="8"
>
                <Border.Effect>
                    <DropShadowEffect Color="Black"
                                      BlurRadius="10"
                                      ShadowDepth="10"
                                      Opacity="0.5"
                                      />
                </Border.Effect>
                <Button x:Name="LogOut"
                        Command="{Binding LogOutCommand}"
                        Content="로그아웃" 
                        BorderThickness="0"
                        Background="#2C3E50"
                        FontWeight="Bold"
                        FontFamily="Arial"
                        Foreground="#ECF0F1"
                        FontSize="12"
                        VerticalContentAlignment="Center">

                    <!-- Hover 효과 제거 -->
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2C3E50"/>
                            <Setter Property="Foreground" Value="#ECF0F1"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontFamily" Value="Arial"/>
                            <Setter Property="FontSize" Value="24"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>

                            <!-- 기본 버튼 템플릿 -->
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                Padding="5"
                                                CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="3" Margin="10,20,10,10">
            <Border CornerRadius="12" Background="#F3F3F3" Padding="15"
                    BorderBrush="#DDD" BorderThickness="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Effect="{StaticResource DropShadowEffect}">
                <ListView x:Name="GameRoomList"
                          Background="Transparent"
                          BorderThickness="0"
                          ItemsSource="{Binding RoomList}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Title}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#333"
                                           />
                                <TextBlock Text="{Binding HostInfo}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#333"
                                           />
                                <TextBlock Text="{Binding DisplayTime}"
                                           FontSize="11"
                                           Foreground="#888"
                                           />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="3" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="10">
            <Border CornerRadius="12" Background="#F3F3F3" Padding="15"
                    BorderBrush="#DDD" BorderThickness="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Effect="{StaticResource DropShadowEffect}"
                    Width="280" Height="200">
                <ListBox x:Name="UserStatus"
                         ItemsSource="{Binding UserStatusModel}" BorderThickness="0"
                         HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>
                                <WrapPanel>
                                    <TextBlock Text="{Binding TotalMatch, StringFormat=총 경기: {0}}" Margin="0 0 15 0"/>
                                    <TextBlock Text="{Binding Win, StringFormat=승: {0}}" Margin="0 0 15 0"/>
                                    <TextBlock Text="{Binding Lose, StringFormat=패: {0}}" Margin="0 0 15 0"/>
                                    <TextBlock Text="{Binding WinRate, StringFormat=승률: {0:F1}%}" Margin="0 0 15 0"/>
                                </WrapPanel>
                                <TextBlock Text="{Binding Rating, StringFormat=점수: {0}}" FontWeight="SemiBold" Foreground="#3A3A3A"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>

        <Grid Grid.Row="4" Grid.Column="3" Grid.RowSpan="3" Grid.ColumnSpan="2" Margin="10,10,10,0">
            <Border Background="#F3F3F3"
                    BorderBrush="#D0D0D0"
                    BorderThickness="0"
                    CornerRadius="10"
                    Effect="{StaticResource DropShadowEffect}"
                    Padding="10">
                <StackPanel>
                    <TextBlock Text="접속 중인 유저"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="10,5,10,5"
                               />
                    <ListBox x:Name="OnlineUserList" Grid.Row="4" Grid.Column="3" Grid.RowSpan="3" Grid.ColumnSpan="2" Margin="0,10,0,10"
                             ItemsSource="{Binding OnlineUsers}"
                             BorderThickness="0"
                             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F9F9F9"
                                        Effect="{StaticResource DropShadowEffect}"
                                        CornerRadius="10"
                                        Padding="8"
                                        BorderBrush="#CCC"
                                        BorderThickness="0"
                                        >
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold"/>
                                        <TextBlock Text=" [" FontSize="14"/>
                                        <TextBlock Text="{Binding Rating}" FontSize="14"/>
                                        <TextBlock Text="]" FontSize="14"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Border Background="#F3F3F3"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    CornerRadius="10"
                    Effect="{StaticResource DropShadowEffect}"
                    Margin="10,10,10,0"
                    Padding="10">
                <ListBox Name="ChatBox" 
                         ItemsSource="{Binding ChatMessages}" 
                         Background="Transparent"
                         BorderBrush="#DDD"
                         BorderThickness="0"
                         Padding="10"
                         FontFamily="Segoe UI"
                         FontSize="12"
                         ScrollViewer.VerticalScrollBarVisibility="Auto" Loaded="ChatBox_Loaded">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F9F9F9"
                                    Effect="{StaticResource DropShadowEffect}"
                                    CornerRadius="10"
                                    Padding="8"
                                    Margin="5"
                                    BorderBrush="#CCC"
                                    BorderThickness="0"
                                    >
                                <TextBlock Text="{Binding}" TextWrapping="Wrap" Foreground="#333"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <ListBox.Resources>
                        <Style TargetType="ScrollBar">
                            <Setter Property="Width" Value="6"/>
                            <Setter Property="Background" Value="#EEE"/>
                            <Setter Property="Foreground" Value="#999"/>
                        </Style>
                    </ListBox.Resources>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Focusable" Value="False"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>
        </Grid>

        <Grid Grid.Row="7" Grid.Column="3" Margin="10,10,10,10">
            <Border Background="#2C3E50"
                    BorderBrush="Black"
                    BorderThickness="0"
                    CornerRadius="20"
                    Padding="8"
>
                <Border.Effect>
                    <DropShadowEffect Color="Black"
                                      BlurRadius="10"
                                      ShadowDepth="10"
                                      Opacity="0.5"
                                      />
                </Border.Effect>
                <Button x:Name="CreateGameRoom"
                        Command="{Binding CreateRoomCommand}"
                        Content="방 만들기" 
                        BorderThickness="0"
                        Background="#2C3E50"
                        FontWeight="Bold"
                        FontFamily="Arial"
                        Foreground="#ECF0F1"
                        FontSize="12"
                        VerticalContentAlignment="Center">

                    <!-- Hover 효과 제거 -->
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2C3E50"/>
                            <Setter Property="Foreground" Value="#ECF0F1"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontFamily" Value="Arial"/>
                            <Setter Property="FontSize" Value="24"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>

                            <!-- 기본 버튼 템플릿 -->
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                Padding="5"
                                                CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
        </Grid>
        <Grid Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Margin="10">
            <Border CornerRadius="12"
                    Background="#F3F3F3"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    Padding="8"
                    Effect="{DynamicResource DropShadowEffect}">

                <Grid>
                    <TextBox x:Name="ChatInput"
                             Text="{Binding ChatMessage, UpdateSourceTrigger=PropertyChanged}"
                             KeyDown="ChatInput_KeyDown"
                             FontSize="12"
                             FontFamily="Segoe UI"
                             VerticalContentAlignment="Center"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="#333333"
                             ToolTip="Enter 키로 메시지를 전송합니다"
                             />

                    <!-- Enter 아이콘 (오른쪽 아래 정렬) -->
                    <TextBlock Text="↩"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="#999"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Margin="0,0,4,2"
                               IsHitTestVisible="False"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>