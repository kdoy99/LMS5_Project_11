<Window x:Class="Project_11.View.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_11.View"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:Project_11.ViewModel"
        
        Title="Start" Height="450" Width="600">

    <Window.DataContext>
        <vm:ViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="2" Grid.Column="2" Margin="10,10,10,10">
            <Label Content="ID" FontSize="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="3" Margin="10,10,10,10">
            <TextBox x:Name="idBox"
                     Text="{Binding password}"
                     BorderBrush="Black" 
                     BorderThickness="2" 
                     FontSize="24" 
                     VerticalContentAlignment="Center"
                     />
        </Grid>

        <Grid Grid.Row="3" Grid.Column="2" Margin="10,10,10,10">
            <Label Content="PW" FontSize="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>    
        </Grid>

        <Grid Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="3" Margin="10,10,10,10">
            <TextBox x:Name="pwBox" 
                     BorderBrush="Black" 
                     BorderThickness="2"
                     FontSize="24"
                     VerticalContentAlignment="Center"
                     />
        </Grid>

        <Grid Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,10,10">
            <Button Command="{Binding cmd}"
                    CommandParameter="{Binding ElementName=idBox ,
                                               Path=Text}"
                    Content="로그인" 
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    Background="LightBlue" 
                    FontSize="30"/>
        </Grid>

        <Grid Grid.Row="5" Grid.Column="4" Grid.ColumnSpan="2" Margin="10,10,10,10">
            <Button Content="회원가입" BorderBrush="Black" BorderThickness="2" Background="LightBlue" FontSize="30"/>
        </Grid>

    </Grid>
</Window>
