<Window x:Class="Project_11.View.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_11.View"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:Project_11.ViewModel"

        Title="회원가입" Height="600" Width="600">

    <Window.DataContext>
        <vm:ViewModel_SignUp/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,10,10">
            <Label Content="아이디" FontSize="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="3" Margin="10,10,10,10">
            <TextBox x:Name="idBox_New"
                 Text="{Binding UserAccount.ID}"
                 BorderBrush="Black" 
                 BorderThickness="2" 
                 FontSize="24" 
                 VerticalContentAlignment="Center"
                 />
        </Grid>

        <Grid Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,10,10">
            <Label Content="비밀번호" FontSize="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="3" Margin="10,10,10,10">
            <PasswordBox x:Name="pwBox_New"
                 PasswordChanged="pwBox_PasswordChanged"
                 BorderBrush="Black" 
                 BorderThickness="2"
                 FontSize="24"
                 VerticalContentAlignment="Center"
                 />
        </Grid>

        <Grid Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,10,10">
            <Label Content="닉네임" FontSize="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="3" Margin="10,10,10,10">
            <TextBox x:Name="nameBox_New"
                 Text="{Binding account.Name}"
                 BorderBrush="Black" 
                 BorderThickness="2"
                 FontSize="24"
                 VerticalContentAlignment="Center"
                 /> 
        </Grid>

        <Grid Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,10,10">
            <Label Content="연락처" FontSize="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="5" Grid.Column="4" Grid.ColumnSpan="3" Margin="10,10,10,10">
            <TextBox x:Name="contactBox_New"
                     Text="{Binding account.Contact}"
                 BorderBrush="Black" 
                 BorderThickness="2"
                 FontSize="24"
                 VerticalContentAlignment="Center"
                 />
        </Grid>

        <Grid Grid.Row="7" Grid.Column="4" Grid.ColumnSpan="3" Margin="10,10,10,10">
            <Button x:Name="NewAccount_Button"
                Command="{Binding newCommand}"
                Content="회원가입" 
                BorderBrush="Black" 
                BorderThickness="2" 
                Background="LightBlue" 
                FontSize="30">
            </Button>
        </Grid>

        <Grid Grid.Row="8" Grid.Column="4" Grid.ColumnSpan="3" Margin="10,10,10,10">
            <Button Content="뒤로가기"
                    BorderBrush="Black"
                    BorderThickness="2"
                    Background="LightBlue"
                    FontSize="30"/>
        </Grid>

    </Grid>
</Window>
