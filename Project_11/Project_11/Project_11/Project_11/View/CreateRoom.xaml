<Window x:Class="Project_11.View.CreateRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_11.View"
        mc:Ignorable="d"
        Title="CreateRoom" Height="300" Width="400">
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" ShadowDepth="2" BlurRadius="4" Color="Gray"/>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFC2BFF2" Offset="0"/>
                <GradientStop Color="#FF4A5D91" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5*"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="1" Margin="10,0,10,0">
            <Button Click="Button_Click"
            BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Background>
                    <ImageBrush ImageSource="/View/back.png"/>
                </Button.Background>
            </Button>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="2" Margin="10,0,0,0">
            <Label Content="방 제목"
                   FontFamily="Segoe UI"
                   Foreground="#ECF0F1"
                   FontWeight="Bold"
                   FontSize="10"
                   VerticalContentAlignment="Center"
                   VerticalAlignment="Bottom"
                   />
        </Grid>

        <Grid Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,0,10,0">
            <Border
                    Background="#F3F3F3"
                    CornerRadius="15"
                    BorderThickness="2"
                    BorderBrush="#888"
                    Padding="10"
                    Effect="{DynamicResource DropShadowEffect}">

                <TextBox x:Name="RoomTitle" 
                         Text="{Binding RoomTitle}" 
                         FontSize="12"
                         FontFamily="Segoe UI"
                         FontWeight="Bold"
                         Foreground="#333"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         Background="Transparent"
                         BorderThickness="0"
                         Cursor="Arrow"/>
            </Border>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="2" Margin="10,0,0,0">
            <Label Content="레이팅 제한"
                   FontFamily="Segoe UI"
                   Foreground="#ECF0F1"
                   FontWeight="Bold"
                   FontSize="10"
                   VerticalContentAlignment="Center"
                   VerticalAlignment="Bottom"
                   />
        </Grid>
        <Grid Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,0,10,0">
            <Border
                    Background="#F3F3F3"
                    CornerRadius="15"
                    BorderThickness="2"
                    BorderBrush="#888"
                    Padding="10"
                    Effect="{DynamicResource DropShadowEffect}">

                <TextBox x:Name="RatingLimit" 
                         Text="{Binding RatingLimit}" 
                         FontSize="12"
                         FontFamily="Segoe UI"
                         FontWeight="Bold"
                         Foreground="#333"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         Background="Transparent"
                         BorderThickness="0"
                         Cursor="Arrow"/>
                        </Border>
        </Grid>

        <Grid Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="2" Margin="30,0,30,0">
            <Border Background="#2C3E50"
                    BorderBrush="Black"
                    BorderThickness="0"
                    CornerRadius="20"
                    Padding="8"
                    >
                <Border.Effect>
                    <DropShadowEffect Color="Black"
                              BlurRadius="10"
                              ShadowDepth="10"
                              Opacity="0.5"
                              />
                </Border.Effect>
                <Button x:Name="Create_Button"
                        Command="{Binding CreateGameRoomCommand}"
                        Content="생성하기" 
                        BorderThickness="0"
                        Background="#2C3E50"
                        FontWeight="Bold"
                        FontFamily="Arial"
                        Foreground="#ECF0F1"
                        FontSize="16"
                        VerticalContentAlignment="Center">

                    <!-- Hover 효과 제거 -->
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2C3E50"/>
                            <Setter Property="Foreground" Value="#ECF0F1"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontFamily" Value="Arial"/>
                            <Setter Property="FontSize" Value="24"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>

                            <!-- 기본 버튼 템플릿 -->
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                Padding="5"
                                                CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
        </Grid>
    </Grid>
</Window>
